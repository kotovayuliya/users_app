<H1>All Users</H1>
  <table align="center" width="15%">
  <thead>
    <tr>
      <th align="center"><b>ID</b></th>
      <th align="center"><b>Firstname</b></th>
      <th align="center"><b>Lastname</b></th>
      <th align="center"><b>Salary</b></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td align="center"><%= link_to "#{user.id}", user %></td>
      <td align="center"><%= user.firstname %></td>
      <td align="center"><%= user.lastname %></td>
      <td align="center"><%= user.salary %></td>
    </tr>
  <tbody>
  <% end %>
</table>
<div align="center">
  <%= link_to "Create new user", signup_path, class: "btn btn-md btn-primary" %>
</div>


